{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "rootDir": ".",
    "paths": {
      "../*": ["./src/*"]
    },
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ] 
  },
  "forceConsistentCasingInFileNames": true,
  "noImplicitReturns": true,
  "strict": true,
  "noUnusedLocals": true,
  "include": ["src/**/*"] 
}
